# window frame configurations
# set window-height 3000
# set window-width 1000
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 40
set window-title-page true
set guioptions none
set zoom-min 10

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

# set scrolling options
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 40

# font size
set font "IosevkaLyteTerm"

# clipboard configurations
set selection-clipboard clipboard

# mappings

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map D set "best-fit"
map <C-d> set "first-page-column 1:2"

map r reload
map i recolor
map J zoom out
map K zoom in
map R rotate

# ----- colour config ----- 
set notification-error-bg "#0e0e0e"
set notification-error-fg "#ec8989"
set notification-warning-bg "#0e0e0e"
set notification-warning-fg "#ec8989"
set notification-bg "#0e0e0e"
set notification-fg "#ec8989"
set completion-group-bg "#0e0e0e"
set completion-group-fg "#ffe6b5"
set completion-bg "#0e0e0e"
set completion-fg "#cccccc"
set completion-highlight-bg "#ffe6b5"
set completion-highlight-fg "#0e0e0e"
set inputbar-bg "#0e0e0e"
set inputbar-fg "#cccccc"
set statusbar-bg "#0e0e0e"
set statusbar-fg "#cccccc"
set highlight-color "#ffe6b5"
set highlight-active-color "#c9d36a"
set default-bg "#0e0e0e"
set default-fg "#cccccc"
set recolor-lightcolor "#0e0e0e"
set recolor-darkcolor "#cccccc"
set index-bg "#0e0e0e"
set index-fg "#cccccc"
set index-active-bg "#ffe6b5"
set index-active-fg "#0e0e0e"
set recolor true
